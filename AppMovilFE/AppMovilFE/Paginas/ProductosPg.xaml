<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMovilFE.Paginas.ProductosPg">
    <ContentPage.Content>
       
           
            <StackLayout Orientation="Vertical" Margin="50,10,50,10">
            <Label Text=""></Label>
            <Label FontSize="Large" FontAttributes="Bold" Text="Registro de Productos" TextColor="Navy"></Label>
            <Label Text=""></Label>
            <Entry Style="{StaticResource Texto}" Placeholder="Ingrese codigo" x:Name="textcodigo"></Entry>
            <Entry Style="{StaticResource Texto}" Placeholder="Ingrese Descripcion" x:Name="textnombre"></Entry>
            <Picker Title="Seleccione Unidad" x:Name="combounidad" ></Picker>
            <Entry Style="{StaticResource Texto}" Placeholder="Ingrese Precio" x:Name="textprecio"></Entry>
            <Entry Style="{StaticResource Texto}" Placeholder="Ingrese Cantidad" x:Name="textcantidad"></Entry>
            <Label Text=""></Label>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <Button Style="{StaticResource Botones}" Text="Grabar" Clicked="cmd_grabar"></Button>
                    <Button Style="{StaticResource Botones}" Text="Nuevo" Clicked="cmd_nuevo"></Button>
                    <Button Style="{StaticResource Botones}" Text="Listar" Clicked="cmd_listar"></Button>
            </StackLayout>
            <Label x:Name="Alerta" TextColor="Red"></Label>

            <ListView WidthRequest="450" HeightRequest="200" x:Name="ListDetalle"  HasUnevenRows="True" BackgroundColor="White">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label WidthRequest="300" Text="{Binding prod_codi}"/>
                                <Label WidthRequest="300" Text="{Binding prod_descr}"/>
                                <Label WidthRequest="75" Text="{Binding prod_precio}"/>
                                <Label WidthRequest="75" Text="{Binding prod_stock}"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>


        </StackLayout>
      
          
           
            
       
    </ContentPage.Content>
</ContentPage>