<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMovilFE.Paginas.SeriesPg">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Margin="50,10,50,10">
            <Label Text=""></Label>
            <Label FontSize="Large" FontAttributes="Bold" Text="Registro de Serie" TextColor="Navy"></Label>
            <Label Text=""></Label>
            <Picker Title="Seleccione Tipo Comp." x:Name="combotipocomp" ></Picker>
            <Entry Style="{StaticResource Texto}" Placeholder="Ingrese Serie" x:Name="textserie"></Entry>
            <Picker Title="Seleccione Tipo IGV" x:Name="combotipoigv" ></Picker>
            <Picker Title="Seleccione Tipo Afectacion" x:Name="combotipoafec" ></Picker>
            <Label Text=""></Label>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Button Style="{StaticResource Botones}" Text="Grabar" ></Button>
                <Button Style="{StaticResource Botones}" Text="Nuevo" ></Button>
                <Button Style="{StaticResource Botones}" Text="Listar" ></Button>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>